          <PressReleaseShortcut>
            <button>3</button>
          </PressReleaseShortcut>
        </XTestAtomicBeganOrRecognized>
      </Tap>
      -->
    </GestureRecognizers>
  </GlobalTarget>
  <!-- Public gesture recognizers get merged with global ones -->
  <PublicTarget>
  </PublicTarget>

